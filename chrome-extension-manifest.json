{
  "manifest_version": 2,
  "name": "Tip - Reward your favorite websites with Ethereum",
  "description": "Reward your favorite websites with Ethereum",
  "version": "1.0",
  "browser_action": {
    "default_icon": "./popup/images/icon-grey.png",
    "default_title": "Tip",
    "default_popup": "./popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "all_frames": true,
      "js": ["./content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "tabs"
  ]
}
